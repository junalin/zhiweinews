.navWrapper{
  background-color:#2b4837;
  position: fixed;  
  height: 210rpx;
  width: 100%;
}

.navBarWrapper{
  position: absolute;
  width: 100%;
  height: 36rpx;
}

.navIcon{
  position: absolute;
  top: 66rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx; 
}

.navTitle{
  position: absolute;
  top:70rpx;
  left:80rpx;
  font-family: "HYXinRenWenSongW",汉仪新人文宋,"Microsoft YaHei",微软雅黑;
  font-size: 40rpx;
  line-height: 56rpx;
  color: white;
}

.newsTabsWrapper{
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  top: 145rpx;
}

.newsTabs{
  position: relative;
  width: 120 rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: white;
  opacity: 0.8;
}

.selected {
  font-size: 36rpx;
  line-height: 50rpx;
}

.selected-line {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  border-bottom: 4rpx solid white ;
}

.topWrapper{
  display: flex;
}

.topBg{
  opacity: 0.1;
  z-index:-2;
}
.topIcon{
  position: relative;
  z-index:-1; 
}

.top{
}

.topDes{
  color: white;
  position: relative;
  text-align: center;
  top:-200rpx;
  opacity: 0.8;
}

.newsListWrapper{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
}

.newsListItems{
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 4rpx solid #2b4837;
  padding: 30rpx 0;
  margin: 0 30rpx;
}

.listIcon{
  width:200rpx;
  height:100rpx;
}